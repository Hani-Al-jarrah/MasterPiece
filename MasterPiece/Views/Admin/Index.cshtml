@{
    ViewData["Title"] = "Dashboard";
}
@{
    Layout = "Admin";
}

<h2>Welcome to DarNA Admin Dashboard</h2>
<p>Use the sidebar to navigate through management sections.</p>
@model dynamic
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "Admin";
}

<h2>Dashboard Overview</h2>

<div class="row">
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Total Houses</h5>
                <p class="card-text fs-4">@Model.Houses</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">Total Tours</h5>
                <p class="card-text fs-4">@Model.Tours</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">Users</h5>
                <p class="card-text fs-4">@Model.Users</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-secondary">
            <div class="card-body">
                <h5 class="card-title">Contact Messages</h5>
                <p class="card-text fs-4">@Model.Contacts</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">Feedbacks</h5>
                <p class="card-text fs-4">@Model.Feedbacks</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-dark">
            <div class="card-body">
                <h5 class="card-title">Total Bookings</h5>
                <p class="card-text fs-4">@Model.Bookings</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-danger">
            <div class="card-body">
                <h5 class="card-title">Payments</h5>
                <p class="card-text fs-4">@Model.PaymentsCount</p>
                <p class="card-text">Total: <strong>@Model.PaymentsTotal.ToString("C")</strong></p>
            </div>
        </div>
    </div>
</div>
