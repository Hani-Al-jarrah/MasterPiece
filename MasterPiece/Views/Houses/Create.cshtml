@model MasterPiece.Models.House

@{
    ViewData["Title"] = "Create House";
    Layout = "Admin";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="LocationName"></label>
        <input asp-for="LocationName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TypeName"></label>
        <input asp-for="TypeName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MaxGuests"></label>
        <input asp-for="MaxGuests" class="form-control" />
    </div>

    <div class="form-group">
        <label>House Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="AvailableFrom"></label>
        <input asp-for="AvailableFrom" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AvailableTo"></label>
        <input asp-for="AvailableTo" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Stars"></label>
        <input asp-for="Stars" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Rate"></label>
        <input asp-for="Rate" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
