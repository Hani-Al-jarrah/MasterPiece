@{
    ViewData["Title"] = "Add Images";
    Layout = "Admin";
}
<h2>Add Images to House</h2>

<form asp-action="AddImages" enctype="multipart/form-data" method="post">
    <input type="hidden" name="houseId" value="@ViewBag.HouseId" />

    <div class="form-group">
        <label>Image 1</label>
        <input type="file" name="Image1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Image 2</label>
        <input type="file" name="Image2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Image 3</label>
        <input type="file" name="Image3" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Upload Images</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
