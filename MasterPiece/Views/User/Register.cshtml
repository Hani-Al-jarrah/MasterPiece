<body id="register_bg">

	<nav id="menu" class="fake_menu"></nav>

	<div id="preloader">
		<div data-loader="circle-side"></div>
	</div>
	<!-- End Preload -->

	<div id="login">
		<aside>
			<figure>
				<a asp-controller="Home" asp-action="Index">
					<img src="~/Images/img/DarNa دارنا.png" width="155" height="30" alt="DarNa Logo" class="logo_sticky">
				</a>
			</figure>
			
			<form asp-controller="User" asp-action="Register" method="post" autocomplete="off">
				<div class="form-group">
					<label for="FullName">Your Name</label>
					<input class="form-control" type="text" id="FullName" name="FullName" required>
					<i class="ti-user"></i>
				</div>

				<div class="form-group">
					<label for="Email">Your Email</label>
					<input class="form-control" type="email" id="Email" name="Email" required>
					<i class="icon_mail_alt"></i>
				</div>

				<div class="form-group">
					<label for="PhoneNumber">Your Phone Number</label>
					<input class="form-control" type="text" id="PhoneNumber" name="PhoneNumber" required>
					<i class="ti-mobile"></i>
				</div>

				<div class="form-group">
					<label for="Password">Your Password</label>
					<input class="form-control" type="password" id="Password" name="Password" required>
					<i class="icon_lock_alt"></i>
				</div>

				<div class="form-group">
					<label for="ConfirmPassword">Confirm Password</label>
					<input class="form-control" type="password" id="ConfirmPassword" name="ConfirmPassword" required>
					<i class="icon_lock_alt"></i>
				</div>
			@* 	<div class="form-group">
					<label for="ConfirmPassword">Confirm Password</label>
					<input class="form-control" type="password" asp-for="ConfirmPassword" required>
				</div> *@

