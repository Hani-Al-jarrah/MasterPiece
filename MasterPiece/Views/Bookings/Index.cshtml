@model List<MasterPiece.Models.HouseBooking>
@{
    ViewData["Title"] = "Bookings";
    Layout = "Admin";
    var tourBookings = (List<MasterPiece.Models.TourBooking>)ViewBag.TourBookings;
}

<h2>House Bookings</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>User</th>
            <th>House</th>
            <th>Guests</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Status</th>
            <th>Booking Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.User?.FullName</td>
                <td>@b.House?.Name</td>
                <td>@b.Guests</td>
                <td>@b.CheckInDate</td>
                <td>@b.CheckOutDate</td>
                <td>@b.Status</td>
                <td>@b.BookingDate</td>
                <td>
                    @if (b.Status != "Cancelled")
                    {
                        <form asp-action="CancelHouse" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@b.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<h2 class="mt-5">Tour Bookings</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>User</th>
            <th>Tour</th>
            <th>Status</th>
            <th>Booking Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in tourBookings)
        {
            <tr>
                <td>@b.User?.FullName</td>
                <td>@b.Tour?.Name</td>
                <td>@b.Status</td>
                <td>@b.BookingDate</td>
                <td>
                    @if (b.Status != "Cancelled")
                    {
                        <form asp-action="CancelTour" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@b.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
