<body>
    <div id="page">
        <header class="header menu_fixed">
            <div id="preloader"><div data-loader="circle-side"></div></div>
            <div id="logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/Images/img/DarNa دارنا.png" width="150" height="30" alt="" class="logo_normal">
                    <img src="~/Images/img/DarNa دارنا.png" width="150" height="30" alt="" class="logo_sticky">
                </a>
            </div>
            <ul id="top_menu">
                @if (Context.Session.GetInt32("UserId") != null)
                {
                    <li><a asp-controller="Cart" asp-action="Index" class="cart-menu-btn" title="Cart"></a></li>
                    <li><a asp-controller="Wishlist" asp-action="Index" class="wishlist_bt_top" title="Your wishlist"></a></li>
                    <li><form asp-controller="User" asp-action="Logout" method="post"><button type="submit" class="btn btn-sm btn-danger">Logout</button></form></li>
                }
                else
                {
                    <li><a href="#sign-in-dialog" id="sign-in" class="login" title="Sign In">Sign In</a></li>
                }
            </ul>
            <a href="#menu" class="btn_mobile">
                <div class="hamburger hamburger--spin" id="hamburger">
                    <div class="hamburger-box">
                        <div class="hamburger-inner"></div>
                    </div>
                </div>
            </a>
            <nav id="menu" class="main-menu">
                <ul>
                    <li><span><a asp-controller="Home" asp-action="Index">Home</a></span></li>
                    <li><span><a asp-controller="Dar" asp-action="Index">Dar</a></span></li>
                    <li><span><a asp-controller="Home" asp-action="Tours">Tours & Adventures</a></span></li>
                    <li><span><a asp-controller="Home" asp-action="About">About</a></span></li>
                    <li><span><a asp-controller="Home" asp-action="Contact">Contacts</a></span></li>
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <li><span><a asp-controller="User" asp-action="Profile">Profile</a></span></li>
                    }
                </ul>
            </nav>
        </header>

        @RenderBody()

        <footer>
            @* <div class="container margin_60_35"> *@
                <div class="container">

                <div class="row">
                    <div class="col-lg-5 col-md-12 pe-5">
                        <p><img src="~/Images/img/DarNa دارنا.png" width="150" height="30" alt=""></p>
                        <p>We’re dedicated to bridging the gap between travelers and the authentic beauty of Jordan...</p>
                        <div class="follow_us">
                            <ul>
                                <li>Follow us</li>
                                <li><a href="#0"><i class="bi bi-facebook"></i></a></li>
                                <li><a href="#0"><i class="bi bi-twitter-x"></i></a></li>
