<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - DarNA Admin</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            font-family: sans-serif;
            display: flex;
        }

        .sidebar {
            width: 220px;
            height: 100vh;
            background-color: #B88E2F;
            position: fixed;
            top: 0;
            left: 0;
            padding: 20px;
            color: white;
        }

        .content {
            margin-left: 240px; /* ⬅ pushes content beside the sidebar */
            padding: 20px;
        }

            .sidebar a {
                color: white;
                display: block;
                padding: 10px 0;
                text-decoration: none;
            }

    
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

</head>
<body>
    <div class="sidebar">
        <img src="/Images/img/DarNa دارنا.png" width="150" height="30" alt="DarNA Logo" class="logo_normal" />
        <hr />
        <a asp-controller="Admin" asp-action="Index">Dashboard</a>
        <a asp-controller="Houses" asp-action="Index">Manage Houses</a>
        <a asp-controller="Tours" asp-action="Index">Manage Tours</a>
        <a asp-controller="Users" asp-action="Index">Users</a>
        <a asp-controller="Bookings" asp-action="Index">Bookings</a>
        <a asp-controller="Feedback" asp-action="Index">Feedback</a>
        <a asp-controller="ContactMessages" asp-action="Index">Contact Messages</a>
        <a asp-controller="Blogs" asp-action="Index">Blogs</a>
        <a asp-controller="Payments" asp-action="Index">Payments</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
